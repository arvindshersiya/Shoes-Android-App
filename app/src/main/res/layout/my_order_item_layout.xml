<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/slider_bg"
    android:elevation="3dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/myoder_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vnts" />

    <TextView
        android:id="@+id/myorder_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="vens shoes"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/myoder_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/myorder_indicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/myoder_product_image"
        app:layout_constraintTop_toBottomOf="@+id/myorder_product_title"
        app:srcCompat="@drawable/dot_icon" />

    <TextView
        android:id="@+id/myorder_delivery_date_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Delivery on Sun, 16th jan 2022"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/myorder_indicator"
        app:layout_constraintStart_toEndOf="@+id/myorder_indicator"
        app:layout_constraintTop_toTopOf="@+id/myorder_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>