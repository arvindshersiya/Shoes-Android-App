<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/slider_bg">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Payment  "
        android:textColor="#4E4E4E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/p_m_cod_btn"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:background="@drawable/cod"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toStartOf="@+id/p_m_pytem_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/minus_sign_icon"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@+id/p_m_cod_btn"
        app:layout_constraintEnd_toStartOf="@+id/p_m_pytem_btn"
        app:layout_constraintStart_toEndOf="@+id/p_m_cod_btn"
        app:layout_constraintTop_toBottomOf="@+id/divider8" />


    <Button
        android:id="@+id/p_m_pytem_btn"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/razor"
        android:textColor="#FFFFFF"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p_m_cod_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>