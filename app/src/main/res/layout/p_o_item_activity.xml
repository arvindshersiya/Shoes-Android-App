<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/input_bg"
    android:elevation="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:padding="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/p_o_shoes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes 2"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p_o_shoes_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Qty: 2"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_o_shoes_name" />

    <TextView
        android:id="@+id/p_o_shoes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 499/-"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/p_o_shoes_qty"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@+id/p_o_shoes_qty" />


</androidx.constraintlayout.widget.ConstraintLayout>